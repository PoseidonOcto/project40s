{
  "manifest_version": 3,

  "key": "",
  "name": "Project40S Chrome Extension",
  "description": "Detect misinformation with the help of the misinfo mavericks.",
  "version": "0.0.0.1",
  "icons": {
    "128": "images/project40s.png"
  },

  "options_page": "options.html",

  "action": {
    "default_icon": "images/project40s.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "identity",
    "contextMenus"

  ],
  "oauth2": {
    "client_id": "684280919387-sbfdfhlilvsdhialaktqmr5ndboof7nn.apps.googleusercontent.com",
	"scopes":["https://www.googleapis.com/auth/userinfo.email"]
  },

  "host_permissions": [
    "<all_urls>"
  ]
}
